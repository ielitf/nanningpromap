<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="1920px"
    android:background="@drawable/mapbackground"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0px"
            android:layout_marginRight="0px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="1080px"
                android:layout_height="615px"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/fragment_video"
                    android:name="com.ceiv.signpost.fragment_video"
                    android:layout_marginTop="13px"
                    android:layout_marginLeft="13px"
                    android:layout_marginBottom="13px"
                    android:layout_width="796px"
                    android:layout_height="589px" />

                <fragment
                    android:id="@+id/fragment_date"
                    android:name="com.ceiv.signpost.fragment_date"
                    android:layout_marginLeft="13px"
                    android:layout_marginRight="13px"
                    android:layout_marginTop="13px"
                    android:layout_marginBottom="13px"
                    android:layout_width="245px"
                    android:layout_height="589px" />

            </LinearLayout>

            <fragment
                android:id="@+id/fragment_map"
                android:name="com.ceiv.signpost.fragment_map"
                android:layout_marginLeft="13px"
                android:layout_width="1055px"
                android:layout_height="800px" />

            <fragment
                android:id="@+id/fragment_pic"
                android:name="com.ceiv.signpost.fragment_pic"
                android:layout_marginTop="13px"
                android:layout_width="1080px"
                android:layout_height="505px" />

        </LinearLayout>

        <TextView
            android:id="@+id/textDebugInfo"
            android:visibility="invisible"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:text="192.168.1.5"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>